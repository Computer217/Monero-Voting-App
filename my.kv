<CreateAccountWindow>:
    name: "create"

    wallet_name: wallet_name
    password: passw

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Create a voter Account"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Wallet Name: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.12
                id: wallet_name
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4
            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*2}
                text: "Password: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13*2}
                size_hint: 0.4, 0.12
                id: passw
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4

        Button:
            pos_hint:{"x":0.3,"y":0.25}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Registered to vote? Log In"
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.15
            text: "Submit"
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release:
                root.manager.transition.direction = "left"
                root.submit()


<LoginWindow>:
    name: "login"

    wallet_name: wallet_name
    password: password

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Login to Vote"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Wallet Name: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x": 0.5 , "top":0.8}
                size_hint: 0.4, 0.12
                id: wallet_name
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*2}
                text: "Password: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x": 0.5, "top":0.8-0.13*2}
                size_hint: 0.4, 0.12
                id: password
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4

        Button:
            pos_hint:{"x":0.3,"y":0.25}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Register to vote now!"
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.15
            font_size: (root.width**2 + root.height**2) / 14**4
            text: "Login"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

<MainWindow>:
    n: n
    candidate1: candidate
    candidate2: candid
    candidate3: cand
    candidate4: can
    

    FloatLayout:
        Label:
            id: n
            pos_hint:{"x": 0.1, "top":1}
            size_hint:0.8, 0.2
            text: "Candidates"

        Label:
            id: candidate
            pos_hint:{"x": 0.1, "top":0.9}
            size_hint:0.8, 0.2
            text: "candidate1: "

        Label:
            id: candid
            pos_hint:{"x": 0.1, "top":0.8}
            size_hint:0.8, 0.2
            text: "candidate2: "
        
        Label:
            id: cand
            pos_hint:{"x": 0.1, "top":0.7}
            size_hint:0.8, 0.2
            text: "candidate3: "

        Label:
            id: can
            pos_hint:{"x": 0.1, "top":0.6}
            size_hint:0.8, 0.2
            text: "candidate4: "
           
        Button:
            pos_hint:{"x":0.2, "y": 0.05}
            size_hint:0.6,0.1
            text: "Log Out"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"
        Button:
            pos_hint:{"x":0.2, "y": 0.2}
            size_hint:0.6,0.1
            text: "Vote"
            on_release:
                root.vote()


